<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd 
http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <!-- SEVER BROWSER CONTROL -->
    <controlDefinition name="saved-server-line">
        <panel childLayout="horizontal" width="90%" align="left" padding="3px">
            <text id="#server-name-text" font="Interface/Fonts/SolarWarsFont32.fnt" 
                  color="#ffff" text="" align="left" valign="center" height="36px"
                  width="40%"/>
            
            <text id="#server-ip-text" font="Interface/Fonts/SolarWarsFont32.fnt" 
                  color="#ffff" text="" align="left" valign="center" height="36px"
                  width="40%"/>
        </panel>
    </controlDefinition>
    <!-- SERVER LOBBY CONTROL -->
    <controlDefinition name="server-lobby-line">
        <panel childLayout="horizontal" width="100%" align="center" padding="3px">
            <text id="#player-name-text" font="Interface/Fonts/SolarWarsFont32.fnt" 
                  color="#ffff" text="" align="center" valign="top" height="36px"
                  width="50%"/>
            <panel childLayout="center" width="25%">
                <panel id="#player-color-panel" height="32px" 
                       width="32px" align="center" valign="top" backgroundColor="000f"/>
            </panel>  
            <panel childLayout="center" width="25%" visibleToMouse="false">
                <text id="#player-ready-text" font="Interface/Fonts/SolarWarsFont32.fnt" 
                      color="#ffff" text="not ready" align="center" valign="top" height="36px"
                      width="100%"/>
            </panel>
        </panel>
    </controlDefinition>

    <!--       GAME STATS CONTROL -->
    <controlDefinition name="player-stats-line">
        
        <panel childLayout="horizontal" width="100%" height="47px" 
               align="center" padding="3px">
            <!--             STATS_PLAYER_NAME_TEXT -->
            <panel childLayout="center" width="25%" visibleToMouse="false">
                <text id="#stats-player-name-text" 
                      font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="" align="center">
                </text>
            </panel>
            <!--             STATS_PLAYER_SHIPS_TEXT -->
            <panel childLayout="center" width="15%" visibleToMouse="false">
                <text id="#stats-player-ships-text" 
                      font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="" align="center" 
                      valign="top" width="100%">
                </text>
            </panel>
            <!--             STATS_PLAYER_PLANET_TEXT -->
            <panel childLayout="center" width="15%" visibleToMouse="false">
                <text id="#stats-player-planet-text" 
                      font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="" align="center" 
                      valign="top" width="100%">
                </text>
            </panel>
            <!--             STATS_PLAYER_SHIPSPERSEC_TEXT -->
            <panel childLayout="center" width="15%" visibleToMouse="false">
                <text id="#stats-player-shipspersec-text" 
                      font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="" align="center" 
                      valign="top" width="100%">
                </text>
            </panel>
            <!--             STATS_PLAYER_COLOR_PANEL -->
            <panel childLayout="vertical" width="15%" visibleToMouse="false">
                <panel id="#stats-player-color-panel" height="24px" 
                       width="24px" align="center" valign="bottom" backgroundColor="#0000"/>
            </panel> 
            <!--             STATS_PLAYER_POWER_TEXT -->
            <panel childLayout="center" width="15%" visibleToMouse="false">
                <text id="#stats-player-power-text" 
                      font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="" align="center" 
                      valign="top" width="100%">
                </text>
            </panel>
        </panel>
    </controlDefinition>

    <!-- SW BUTTON CONTROL -->
    <controlDefinition name="sw-button">
        <panel align="center" backgroundColor="#ffff" 
               childLayout="center" padding="3px">
            <panel align="center" backgroundColor="#00ff" 
                   childLayout="center" height="100%" width="100%">
                <text font="Interface/Fonts/SolarWarsFont32.fnt" 
                      color="#ffff" text="$text" align="center" valign="center"/>
            </panel>
        </panel>
    </controlDefinition>
    
    <!-- SW BIG BUTTON CONTROL -->
    <controlDefinition name="sw-big-button">
        <panel align="center" backgroundColor="#ffff" 
               childLayout="center" padding="3px">
            <panel align="center" backgroundColor="#00ff" 
                   childLayout="center" height="100%" width="100%">
                <text font="Interface/Fonts/SolarWarsFont64.fnt" 
                      color="#ffff" text="$text" align="center" valign="center" wrap="true"/>
            </panel>
        </panel>
    </controlDefinition>
    
    <!-- CHAT LINE CONTROL -->
    <controlDefinition name="chat-line">
        <panel childLayout="horizontal" width="100%" height="26px" 
               align="center" padding="1px" backgroundColor="#1118">
            
            <panel childLayout="center" width="5%" height="24px">
                <panel childLayout="center" height="24px" 
                       width="24px" align="center" valign="top" 
                       backgroundColor="#1118" padding="4px">
                    <panel id="#chat-color-panel" align="center" 
                           valign="center" backgroundColor="#000f"/>
                </panel>
            </panel>  
            <panel childLayout="center" height="20px" width="25%" 
                   visibleToMouse="false">
                <text id="#chat-name-text" font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="name" align="center"
                      valign="center" />
            </panel>
            <panel childLayout="center" width="2px" 
                   visibleToMouse="false" backgroundColor="#dddf"/>
            <panel childLayout="center" height="20px" width="70%" 
                   visibleToMouse="false" textHAlign="left" textVAlign="center">
                <text id="#chat-text" font="Interface/Fonts/SolarWarsStats.fnt" 
                      color="#ffff" text="messagemessagemessage"
                      width="100%"/>
            </panel>
        </panel>
    </controlDefinition>
        

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- STYLES -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- FAVORITE LIST BOX ITEM STYLE -->
    <style id="favorite-listbox-item" base="nifty-label">
        <attributes color="#000f" width="100%" align="left" textVAlign="center" 
                    textHAlign="left" />
        <interact onClick="listBoxItemClicked()"/>
        <effect>
            <onCustom customKey="focus" name="colorBar" post="false" color="#009f" neverStopRendering="true" timeType="infinite" />
            <onCustom customKey="select" name="colorBar" post="false" color="#004f" neverStopRendering="true" timeType="infinite" />
            <onCustom customKey="select" name="textColor" post="false" color="#fc0f" neverStopRendering="true" timeType="infinite" />
            <onHover name="colorBar" color="#009f" post="false" neverStopRendering="true" timeType="infinite" inset="1px"/>
            <onClick name="focus" targetElement="#parent#parent"/>
        </effect>
    
    </style>
    <!-- GAME STATS WINDOW STYLE -->
    <style id="game-stats-style">
        <attributes width="100%" height="*" padding="10px" 
                    backgroundColor="#0000" childLayout="center" />
    </style>    
    <!-- CHAT STYLE -->
    <style id="chat-style">
        <attributes width="100%" height="*" padding="1px" 
                    backgroundColor="#0000" childLayout="vertical" />
    </style>
    <!-- SERVER BROWSER STYLE -->
    <style id="server-browser-style">
        <attributes width="100%" height="*" padding="5px" 
                    backgroundColor="#00fa" childLayout="center" />
    </style>
</nifty>
