<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd 
http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- pause popup -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <popup id="pause_popup" childLayout="center" backgroundColor="#0000" >
        <effect>
            <onCustom customKey="in" name="move" length="200" mode="in" 
                direction="left" startDelay="0" inherit="true"/>
            <onCustom customKey="out" name="move" length="200" mode="out" 
                direction="left" startDelay="0" inherit="true"/>
        </effect>
        <panel id="pause_panel" childLayout="center" height="25%" width="40%" 
        align="left" valign="center" backgroundColor="#fff8" padding="5px">

            <panel id="pause_panel_frame" childLayout="vertical" align="center" 
            valign="center" color="#ffff" backgroundColor="#00f8" padding="10%">
            <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" 
                childLayout="center" visibleToMouse="false" height="10%" width="60%"/>
            <!-- CONTINUE BUTTON -->
                <panel id="pause_continue_panel_frame" align="right" backgroundColor="#ffff" 
                childLayout="center" visibleToMouse="true" height="40%" width="60%" padding="3px">
                    <panel id="pause_continue_panel" align="center" backgroundColor="#00ff" 
                    childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="continueGame()"/>
                        <text id="continue_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="continue" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                            </effect>
                        </text>
                        
                    </panel>
                </panel>
            <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" 
                childLayout="center" visibleToMouse="false" height="10%" width="60%"/>
            <!-- QUIT BUTTON -->
                <panel id="pause_quit_panel_frame" align="right" backgroundColor="#ffff" 
                childLayout="center" visibleToMouse="true" height="40%" width="60%" padding="3px">
                    <panel id="pause_quit_panel" align="center" backgroundColor="#00ff" 
                    childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="quitGame()"/>
                        <text id="quit_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="quit" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                            </effect>
                        </text>
                        
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" 
                childLayout="center" visibleToMouse="false" height="10%" width="60%"/>
            </panel>
        </panel>
    </popup>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- add server popup -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <popup id="add_server_popup" childLayout="center" backgroundColor="#0000">
        <panel id="pause_panel" childLayout="center" height="40%" width="40%" 
        align="center" valign="center" backgroundColor="#fff8" padding="5px">
            <panel id="pause_panel_frame" childLayout="vertical" align="center" 
            valign="center" color="#ffff" backgroundColor="#00f8" padding="5%"
            height="100%" width="100%">
                <text id="add_server_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="ADD NEW SERVER" align="center" 
                        valign="center" height ="30%">
                    <effect>
                        <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                    </effect>
                </text>
                <control id="server_name" name="textfield" maxLength="20" 
                text="New Server" align="center" valign="center" width="80%"/>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" 
                childLayout="center" visibleToMouse="false" height="5%" width="100%"/>
                <control id="ip_address" name="textfield" maxLength="15" 
                text="255.255.255.255" align="center" valign="center" width="80%"/>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" 
                childLayout="center" visibleToMouse="false" height="15%" width="100%"/>
                <panel id="add_server_horizontal" childLayout="horizontal" padding="5%">
                    <control id="add_server_back" name="button" label="CANCEL" 
                align="center" valign="center" width="45%" height="25%"/>
                    <control id="add_new_server" name="button" label="SAVE FAVORITE" 
                align="center" valign="center" width="45%" height="25%"/>
                </panel>
            </panel>
        </panel>
    </popup>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- startup screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="startup">
        <layer id="foreground" backgroundColor="#0000" childLayout="center">
            <panel id="solarwars_startup_panel" align="center" backgroundColor="#0000" 
            childLayout="center" visibleToMouse="false" height="80%" width="80%">
                <text id="solarwars_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                color="#ffff" text="Loading" align="center" valign="center" width="100%" height="100%">
                    <effect>
                        
                        <onActive name="textSizePulsate" startSize="90%" endSize="100%"/>
                    </effect>
                </text>
            </panel>
        </layer>
    </screen>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- mainmenu screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="mainmenu" controller="com.solarwars.gamestates.lib.MainmenuState">
        <layer id="menu" backgroundColor="#0000" childLayout="center">
            <panel id="solarwars_mainmenu_panel" align="center" backgroundColor="#0000" 
            childLayout="vertical" visibleToMouse="true" height="100%" width="80%">
                <!-- HEADING -->
                <panel id="solarwars_head_panel" align="center" backgroundColor="#0000" 
                childLayout="center" visibleToMouse="false" height="20%" width="100%">
                    <text id="solarwars_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                    color="#ffff" text="SolarWars" align="center" valign="center" width="100%" height="100%">
                        <effect>
                            <onActive name="textSizePulsate" startSize="90%" endSize="100%"/>
                        </effect>
                    </text>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" 
                visibleToMouse="false" height="5%" width="60%"/>
                <!-- MENU BUTTONS -->
                <panel id="solarwars_singleplayer_panel_frame" align="center" backgroundColor="#ffff" 
                childLayout="center" visibleToMouse="true" height="10%" width="60%" padding="3px">
                    <panel id="solarwars_singleplayer_panel" align="center" backgroundColor="#00ff" 
                    childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="startSingleplayer()"/>
                        <text id="singleplayer_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="singleplayer" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" 
                visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_multiplayer_panel_frame" align="center" 
                backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="10%" width="60%" padding="3px">
                    <panel id="solarwars_multiplayer_panel_frame" align="center" 
                    backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="startMultiplayer()"/>
                        <text id="multiplayer_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="multiplayer" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" 
                visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_options_panel_frame" align="center" backgroundColor="#ffff" 
                childLayout="center" visibleToMouse="true" height="10%" width="60%" padding="3px">
                    <panel id="solarwars_options_panel" align="center" backgroundColor="#00ff" 
                    childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="openOptions()"/>
                        <text id="options_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="options" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" 
                visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_tutorial_panel_frame" align="center" backgroundColor="#ffff" 
                childLayout="center" visibleToMouse="true" height="10%" width="60%" padding="3px">
                    <panel id="solarwars_tutorial_panel" align="center" backgroundColor="#00ff" 
                    childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="openTutorial()"/>
                        <text id="tutorial_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="tutorial" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" 
                visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_quit_panel_frame" align="center" backgroundColor="#ffff" 
                childLayout="center" visibleToMouse="true" height="10%" width="60%" padding="3px">
                    <panel id="solarwars_quit_panel" align="center" backgroundColor="#00ff" 
                    childLayout="center" visibleToMouse="true" height="100%" width="100%">
                        <interact onClick="quitGame()"/>
                        <text id="quit_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="quit" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                        
                    </panel>
                </panel>
            </panel>
            <!--
            <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#ffff" 
            childLayout="center" visibleToMouse="true">
                <interact onClick="quit()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/SolarWarsNifty.fnt" color="#000f" text="Hello World!" align="center" valign="center" />
            </panel>
            -->
        </layer>
    </screen>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- singleplayer screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="singleplayer" controller="com.solarwars.gamestates.lib.SingleplayerState">
        <layer id="none" backgroundColor="#0000" childLayout="center" >

        </layer>

        <layer id="hud" backgroundColor="#0000" childLayout="center">
            <panel id="percentage_panel_frame" height="7%" width="10%" align="right" valign="bottom" 
                backgroundColor="#fff8" childLayout="center" visibleToMouse="false">
                <panel id="percentage_panel" height="95%" width="98%" align="right" valign="bottom" 
                backgroundColor="#00f8" childLayout="center" visibleToMouse="false">
                    <text id="percentage" font="Interface/Fonts/SolarWarsFont64.fnt" 
                    color="#f88f" text="${CALL.refreshPercentage()}%" align="center" valign="center"> 
                        <effect>
                            <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                        </effect>
                    </text>
                </panel>
            </panel>
        </layer>
    </screen>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- multiplayer menu screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="multiplayer_menu" 
    controller="com.solarwars.gamestates.lib.MultiplayerState">
        <layer id="multiplayer_menu" backgroundColor="#0000" childLayout="center">
            <panel id="multiplayer_menu_panel" height="95%" width="95%" 
            align="center" valign="center" backgroundColor="#ffff" childLayout="center" padding="10px">
                <panel id="multiplayer_panel" align="center" backgroundColor="#00ff" 
                childLayout="vertical" visibleToMouse="true" height="100%" width="100%" padding="10%">
                <!-- HEADING -->
                    <panel id="multiplayer_head_panel" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="20%" width="100%">
                        <text id="multiplayer_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="Multiplayer" align="center" valign="center">
                            <effect>
                                <onActive name="textSizePulsate" startSize="90%" endSize="100%"/>
                            </effect>
                        </text>
                    </panel>
                <!-- SPACER -->
                    <panel id="spacer" align="center" backgroundColor="#0000" 
                    childLayout="center" visibleToMouse="false" height="5%" width="60%"/>
                <!-- HORIZONTAl -->
                    <!-- PLAYER NAME -->
                    <panel id="multiplayer_player_name_align_h" childLayout="horizontal" height="30%">
                        <panel id="multiplayer_player_name_align_v" childLayout="vertical">
                            <panel id="multiplayer_player_name_align_h" childLayout="horizontal">
                                <text id="multiplayer_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                                color="#ffff" text="NAME" align="center" valign="center">
                                    <effect>
                                        <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                                    </effect>
                                </text>
                                <control id="player_name" name="textfield" maxLength="20" 
                                text="${CALL.getPlayerName()}" align="center" valign="center" width="40%"/>
                            </panel>
                        </panel>
                    </panel>
                    <!-- SERVER LIST -->
                    <panel id="multiplayer_join_server_align_h" childLayout="horizontal" height="50%">
                        <!--
                        <controlDefinition name="saved-server-line">
                            <panel childLayout="horizontal" width="100%" align="center">
                                <control id="#server-name-text" name="label" 
                                align="left" textHAlign="left" height="23px" width="*" wrap="true" />
                                
                                <control id="#server-ip-text" name="label" 
                                align="left" textHAlign="left" height="23px" width="*" wrap="true" />
                            </panel>
                        </controlDefinition>
                        -->
                        <control id="saved_servers_box" name="listBox"  
                        horizontal="optional" displayItems="8" selectionMode="Single" 
                        forceSelection="true" vertical="optional">
                           <!--
                           <control name="saved-server-line" />
                           viewConverterClass="com.solarwars.gamestates.lib.SavedServerItemConverter"
                           -->
                        </control>
                    </panel>
                    <!-- BACK & SERVER CONTROL BOTTOM LIST -->
                    <panel id="multiplayer_bottom_align_h" childLayout="horizontal" height="20%">
                        <panel id="multiplayer_back_align_v" childLayout="vertical" width="20%" padding="5%">
                            <control id="back" name="button" label="BACK" 
                                align="center" valign="center" width="100%"/>
                        </panel>
                        <panel id="multiplayer_add_server_align_v" childLayout="vertical" width="20%" padding="5%">
                            <control id="add_server" name="button" label="ADD SERVER" 
                                align="center" valign="center" width="100%"/>
                        </panel>
                        <panel id="multiplayer_delete_server_align_v" childLayout="vertical" width="20%" padding="5%">
                            <control id="delete_server" name="button" label="DELETE SERVER" 
                                align="center" valign="center" width="100%"/>
                        </panel>
                        <panel id="multiplayer_join_server_align_v" childLayout="vertical" width="20%" padding="5%">
                            <control id="join_server" name="button" label="JOIN SERVER" 
                                align="center" valign="center" width="100%"/>
                        </panel>
                        <panel id="multiplayer_create_server_align_v" childLayout="vertical" width="20%" padding="5%">
                            <control id="create_server" name="button" label="CREATE SERVER" 
                            align="center" valign="center" width="100%"/>
                        </panel>
                    </panel>
                </panel>
            </panel>
        </layer>
    </screen>

</nifty>
