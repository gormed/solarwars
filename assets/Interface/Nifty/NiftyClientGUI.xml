<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd 
http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <!-- SEVER BROWSER CONTROL -->
    <controlDefinition name="saved-server-line">
        <panel childLayout="horizontal" width="90%" align="center" padding="3px">
            <text id="#server-name-text" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="" align="center" valign="center" height="36px"
                        width="40%">
                <effect>
                    <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                </effect>
            </text>
<!--            <control id="#server-name-text" name="label" 
            align="center" textHAlign="center" height="30px" width="*" wrap="true" />-->
            <text id="#server-ip-text" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="" align="center" valign="center" height="36px"
                        width="40%">
                <effect>
                    <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                </effect>
            </text>
<!--            <control id="#server-ip-text" name="label" 
            align="center" textHAlign="center" height="30px" width="*" wrap="true" />-->
        </panel>
    </controlDefinition>
    <!-- SERVER LOBBY CONTROL -->
    <controlDefinition name="server-lobby-line">
        <panel childLayout="horizontal" width="100%" align="center" padding="3px">
            <text id="#player-name-text" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="" align="center" valign="center" height="36px"
                        width="50%">
                <effect>
                    <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                </effect>
            </text>
<!--            <control id="#player-name-text" name="label" 
            align="center" textHAlign="center" height="36px" width="*" wrap="true" />-->
            <panel childLayout="center" width="25%">
                <panel id="#player-color-panel" height="32px" 
            width="32px" align="center" backgroundColor="000f"/>
            </panel>  
            <panel childLayout="center" width="25%" visibleToMouse="false">
                <text id="#player-ready-text" font="Interface/Fonts/SolarWarsFont64.fnt" 
                        color="#ffff" text="not ready" align="center" valign="center" height="36px"
                        width="100%">
                <effect>
                    <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                </effect>
            </text>
            </panel>
        </panel>
    </controlDefinition>
    <!-- FAVORITE LIST BOX ITEM STYLE -->
    <style id="favorite-listbox-item" base="nifty-label">
        <attributes color="#000f" width="100%" align="left" textVAlign="center" textHAlign="left" />
        <interact onClick="listBoxItemClicked()"/>
        <effect>
            <onCustom customKey="focus" name="colorBar" post="false" color="#009f" neverStopRendering="true" timeType="infinite" />
            <onCustom customKey="select" name="colorBar" post="false" color="#004f" neverStopRendering="true" timeType="infinite" />
            <onCustom customKey="select" name="textColor" post="false" color="#fc0f" neverStopRendering="true" timeType="infinite" />
            <onHover name="colorBar" color="#009f" post="false" neverStopRendering="true" timeType="infinite" inset="1px"/>
            <onClick name="focus" targetElement="#parent#parent"/>
        </effect>
    </style>
</nifty>
