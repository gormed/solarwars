-->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- pause popup -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <popup id="pause" childLayout="center" backgroundColor="#000a">
        <panel id="pause_panel" childLayout="vertical" height="30%" width="45%" align="left" valign="center" color="#00ff">
            <panel id="solarwars_continue_panel_frame" align="right" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="40%" width="60%">
                <panel id="solarwars_continue_panel" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                    <interact onClick="continueGame()"/>
                    <text id="continue_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" 
                    text="continue" align="center" valign="center">
                        <effect>
                            <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                        </effect>
                    </text>
                        
                </panel>
            </panel>
            <!-- SPACER -->
            <panel id="spacer" align="center" backgroundColor="#0000" 
            childLayout="center" visibleToMouse="false" height="10%" width="60%"/>

            <panel id="solarwars_quit_panel_frame" align="right" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="40%" width="60%">
                <panel id="solarwars_quit_panel" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                    <interact onClick="quitGame()"/>
                    <text id="quit_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" 
                    text="quit" align="center" valign="center">
                        <effect>
                            <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                        </effect>
                    </text>
                        
                </panel>
            </panel>
        </panel>
    </popup>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- startup screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="startup">
        <layer id="foreground" backgroundColor="#0000" childLayout="center">
            <panel id="solarwars_startup_panel" align="center" backgroundColor="#0000" 
            childLayout="center" visibleToMouse="false" height="80%" width="80%">
                <text id="solarwars_label" font="Interface/Fonts/SolarWarsFont64.fnt" 
                color="#ffff" text="Loading" align="center" valign="center" width="100%" height="100%">
                    <effect>
                        
                        <onActive name="textSizePulsate" startSize="90%" endSize="100%"/>
                    </effect>
                </text>
            </panel>
        </layer>
    </screen>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- mainmenu screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="mainmenu" controller="com.solarwars.gamestates.lib.MainmenuState">
        <layer id="menu" backgroundColor="#0000" childLayout="center">
            <panel id="solarwars_mainmenu_panel" align="center" backgroundColor="#0000" 
            childLayout="vertical" visibleToMouse="true" height="100%" width="80%">
                <!-- HEADING -->
                <panel id="solarwars_head_panel" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="20%" width="100%">
                    <text id="solarwars_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="SolarWars_" align="center" valign="center" width="100%" height="100%">
                        <effect>
                            <onActive name="textSizePulsate" startSize="90%" endSize="100%"/>
                        </effect>
                    </text>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="5%" width="60%"/>
                <!-- MENU BUTTONS -->
                <panel id="solarwars_singleplayer_panel_frame" align="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="10%" width="60%">
                    <panel id="solarwars_singleplayer_panel" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                        <interact onClick="startSingleplayer()"/>
                        <text id="singleplayer_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="singleplayer" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_multiplayer_panel_frame" align="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="10%" width="60%">
                    <panel id="solarwars_multiplayer_panel_frame" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                        <interact onClick="startMultiplayer()"/>
                        <text id="multiplayer_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="multiplayer" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_options_panel_frame" align="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="10%" width="60%">
                    <panel id="solarwars_options_panel" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                        <interact onClick="openOptions()"/>
                        <text id="options_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="options" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_tutorial_panel_frame" align="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="10%" width="60%">
                    <panel id="solarwars_tutorial_panel" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                        <interact onClick="openTutorial()"/>
                        <text id="tutorial_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="tutorial" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                    </panel>
                </panel>
                <!-- SPACER -->
                <panel id="spacer" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false" height="5%" width="60%"/>
                <panel id="solarwars_quit_panel_frame" align="center" backgroundColor="#ffff" childLayout="center" visibleToMouse="true" height="10%" width="60%">
                    <panel id="solarwars_quit_panel" align="center" backgroundColor="#00ff" childLayout="center" visibleToMouse="true" height="95%" width="98%">
                        <interact onClick="quitGame()"/>
                        <text id="quit_label" font="Interface/Fonts/SolarWarsFont64.fnt" color="#ffff" text="quit" align="center" valign="center">
                            <effect>
                                <onActive name="textSize" startSize="0.5" endSize="0.5" oneShot="true"/>
                            </effect>
                        </text>
                        
                    </panel>
                </panel>
            </panel>
            <!--
            <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#ffff" 
            childLayout="center" visibleToMouse="true">
                <interact onClick="quit()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/SolarWarsNifty.fnt" color="#000f" text="Hello World!" align="center" valign="center" />
            </panel>
            -->
        </layer>
    </screen>
<!-- +++++++++++++++++++++++++++++++++++++++ -->
<!-- singleplayer screen -->
<!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="singleplayer" controller="com.solarwars.gamestates.lib.SingleplayerState">
        <layer id="none" backgroundColor="#0000" childLayout="center" >

        </layer>

        <layer id="hud" backgroundColor="#0000" childLayout="center">
            <panel id="percentage_panel_frame" height="7%" width="10%" align="right" valign="bottom" 
                backgroundColor="#fff8" childLayout="center" visibleToMouse="false">
                <panel id="percentage_panel" height="95%" width="98%" align="right" valign="bottom" 
                backgroundColor="#00f8" childLayout="center" visibleToMouse="false">
                <!--
                <control name="percentage" text="${CALL.refreshPercentage()}%" color="#f88f" />
                -->
                    <text id="percentage" font="Interface/Fonts/SolarWarsFont64.fnt" 
                color="#f88f" text="${CALL.refreshPercentage()}%" align="center" valign="center"> 
                        <effect>
                            <onActive name="textSize" startSize="0.3" endSize="0.3" oneShot="true"/>
                        </effect>
                    </text>
                </panel>
            </panel>
        </layer>
    </screen>

</nifty>
